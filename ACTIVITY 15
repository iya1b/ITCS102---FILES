fname = "Maria Sofia Kristelyn"
mname = "Maas"
lname = "Capuchino"
print(f"My full name is {fname} {mname} {lname}")

fname = "Maria Sofia Kristelyn"
mname = "Maas"
lname = "Capuchino"
print(f"My full name is {fname.upper()} {mname.upper()} {lname.upper()}")

sum = 0 
for iya in range(1, 9, 1):
    number = eval(input(f"{iya} - Please input any number --> "))
    sum += number
print(f"The total sum of all the numbers you provided is: {sum}")
